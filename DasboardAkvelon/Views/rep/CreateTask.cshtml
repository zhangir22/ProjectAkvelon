
@{
    ViewBag.Title = "CreateTask";
}

<h2>CreateTask</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container data-box">
        <div class="my-field">
            <label for="name">Write Task Name</label>
            <input type="text" name="name" placeholder="----" id="name" />
        </div>
        <div class="my-field">
            <label for="description">Write Decription</label>
            <input type="text" name="description" placeholder="----" id="description" />
        </div>

        <div class="my-field">
            <label for="status">Chose Status</label>
            <select id="status" name="status">
                <option>ToDo</option>
                <option>InProgress</option>
                <option>Done</option>
            </select>
        </div>
        <div class="my-field">
            <label for="priroty">Set Priroty</label>
            <input type="number" id="priroty" min="1" name="priroty" />
        </div>
    </div>
    <div class="container">

        <input type="submit" value="Create" class="btn btn-default" />

    </div>

}
